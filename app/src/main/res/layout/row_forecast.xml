<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/row_item_dateTime"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Sun 5 April 12:38"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/row_item_forecast_temp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="33 C"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/row_item_dateTime"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/row_item_feels_like"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Feels Like"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/row_item_forecast_temp"/>

        <TextView
            android:id="@+id/row_item_desc"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Broken CLouds"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/row_item_feels_like"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>